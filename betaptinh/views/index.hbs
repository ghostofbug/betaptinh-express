<div class="container">

    <div class="row">

        <div class="col-2"></div>

        <div class="col-8">

            <h3>Bé tập tính</h3>
            <br>
            <br>
        </div>


        <div class="col-2"></div>
    </div>




    <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            <form>
                <div class="row">
                    <div class="col-md-8 col-lg-8 col-sm-4 col-6">
                        <div class="form-group row">
                            <label for="input_num1" class="col-md-4 col-sm-5 col-12" >Số thứ nhất</label>

                            <div class="col-md-8 col-sm-7 col-12">
                                <input type="text" class="form-control" id="input_num1">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-1 col-lg-1 col-sm-3 mx-md-3 col-3 my-sm-0 my-4">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="radio_plus" value="Cộng">
                            <label class="form-check-label" for="radio_plus">Cộng</label>
                        </div>
                    </div>
                    <div class="col-md-1 col-lg-1 col-sm-4 mx-md-3 col-3 my-sm-0 my-4">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="radio_minus" value="Trừ">
                            <label class="form-check-label" for="radio_minus">Trừ</label>
                        </div>
                    </div>
                    <div class="col-md-1 col-lg-2"></div>
                </div>

                <div class="row">
                    <div class="col-md-8 col-lg-8 col-sm-4 col-6">
                        <div class="form-group row">
                            <label for="input_num2" class="col-md-4 col-sm-5 col-12" >Số thứ hai</label>

                            <div class="col-md-8 col-sm-7 col-12">
                                <input type="text" class="form-control " id="input_num2">
                            </div>

                        </div>
                    </div>
                    <div class="col-md-1 col-lg-1 col-sm-4 mx-md-3 col-3 my-sm-0 my-4">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="radio_multi" value="Nhân">
                            <label class="form-check-label" for="radio_multi">Nhân</label>
                        </div>
                    </div>
                    <div class="col-md-1 col-lg-1 col-sm-4 mx-md-3 col-3 my-sm-0 my-4">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="radio_divine" value="Chia">
                            <label class="form-check-label" for="radio_divine">Chia</label>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-8 col-lg-8 col-sm-4 col-6">
                        <div class="form-group row">
                            <label for="input_result" class="col-md-4 col-sm-5 col-12" >Kết quả</label>
                            <div class="col-md-8 col-sm-7 col-12">
                                <input type="text" class="form-control"  id="display_result" readonly>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-1 col-lg-1 col-sm-4 col-6">
                        <button type="submit" class="btn btn-primary mx-md-3 mx-0 my-sm-0 my-6">Tính</button>
                    </div>


                </div>

                <div class="row">
                    <div class="col-md-8 col-lg-8 col-sm-4 col-6">
                        <div class="form-group row">
                            <label for="input_num1" class="col-md-4 col-sm-5 col-12" >Thông báo</label>

                            <p class="col-md-8 col-sm-7" id="display_error">Sai cú pháp</p>

                        </div>
                    </div>
                </div>

            </form>
        </div>
        <div class="col-2"></div>
    </div>

</div>