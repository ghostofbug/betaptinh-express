<div class="container">

    <div class="row">

        <div class="col-2"></div>

        <div class="col-8">

            <h3>Bé tập tính</h3>
            <br>
            <br>
        </div>


        <div class="col-2"></div>
    </div>




    <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            <form method="post" onsubmit="return CheckSubmit()">
                <div class="row">
                    <div class="col-md-8 col-lg-8 col-sm-2">
                        <div class="form-group row">
                            <label for="input_num1" class="col-md-4 col-sm-5" >Số thứ nhất</label>

                            <input type="text" class="form-control col-md-8 col-sm-7" name="number1" value="{{number1}}" id="input_num1">

                        </div>
                    </div>
                    <div class="col-md-1 col-lg-1 col-sm-3 mx-3">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="radio_plus" value="Cộng">
                            <label class="form-check-label" for="radio_plus">Cộng</label>
                        </div>
                    </div>
                    <div class="col-md-1 col-lg-1 col-sm-4 mx-3">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="radio_minus" value="Trừ">
                            <label class="form-check-label" for="radio_minus">Trừ</label>
                        </div>
                    </div>
                    <div class="col-md-1 col-lg-2"></div>
                </div>

                <div class="row">
                    <div class="col-md-8 col-lg-8 col-sm-4">
                        <div class="form-group row">
                            <label for="input_num2" class="col-md-4 col-sm-5" >Số thứ hai</label>

                            <input type="text" class="form-control col-md-8 col-sm-7" name="number2" value="{{number2}}" id="input_num2">

                        </div>
                    </div>
                    <div class="col-md-1 col-lg-1 col-sm-4 mx-3">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="radio_multi" value="Nhân">
                            <label class="form-check-label" for="radio_multi">Nhân</label>
                        </div>
                    </div>
                    <div class="col-md-1 col-lg-1 col-sm-4 mx-3">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="radio_divine" value="Chia">
                            <label class="form-check-label" for="radio_divine">Chia</label>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-8 col-lg-8 col-sm-4">
                        <div class="form-group row">
                            <label for="display_result" class="col-md-4 col-sm-5" >Kết quả</label>

                            <input type="text" class="form-control col-md-8 col-sm-7" id="display_result" value="{{result}}" readonly>

                        </div>
                    </div>

                    <div class="col-md-4">
                        <button type="submit"  class="btn btn-primary mx-3">Tính</button>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-8 col-lg-8 col-sm-4">
                        <div class="form-group row">
                            <label for="input_num1" class="col-md-4 col-sm-5" >Thông báo</label>

                            <p class="col-md-8 col-sm-7" id="display_error"></p>

                        </div>
                    </div>
                </div>

            </form>
        </div>
        <div class="col-2">

        </div>
    </div>

</div>


